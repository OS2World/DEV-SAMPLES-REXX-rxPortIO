/* Event Leave -   1000 */
Arg window self

/* Get item value 1000 Entry Field */
value = VpGetItemValue(window,1000)

IF value > 255 & value < 65536 THEN
  port_Address = value
ELSE
  DO
    /* Set item value 1000 Entry Field */
    CALL VpSetItemValue window,1000,port_Address
    /* 1000 Hz for 200 millisec */
    CALL VpBeep 1000,200
  END
